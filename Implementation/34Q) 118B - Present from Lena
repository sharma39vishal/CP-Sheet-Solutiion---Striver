void answer(){
ll n;
cin>>n;
ll s=n;
ll x=0;
for(ll i = 0; i <n+1;++i){
 for (ll j = 0;j <s;++j){
  cout<<"  ";      
  }   
  s--;
  for(ll j=0;j<x;j++){
    cout<<j<<" ";
  }
  cout<<x;
  for(ll j=x-1;j>=0;j--){
    cout<<" "<<j;
  }
  x++;
  cout<<endl;
}
s=1;
x-=2;
for(ll i = 0; i <n;++i){
 for (ll j = 0;j <s;++j){
  cout<<"  ";      
  }   
  s++;
  for(ll j=0;j<x;j++){
    cout<<j<<" ";
  }
  cout<<x;
  for(ll j=x-1;j>=0;j--){
    cout<<" "<<j;
  }
  x--;
  cout<<endl;
}
}
